{% extends "pages/setup/general/base_form.html.twig" %}
{% import 'components/form/fields_macros.html.twig' as fields %}

{% block config_fields %}
    {{ fields.largeTitle(__('Asset-user history', 'assetuserhistory'), 'ti ti-replace-user') }}

    <input type="hidden" name="config_context" value="{{ config_context }}">
    {% set inject_item_type_field %}
        {% do call('GlpiPlugin\\Assetuserhistory\\Config::dropdownInjectableItemtypes', [{
            values: current_inject_item_type
        }]) %}
    {% endset %}
    {{ fields.htmlField('inject_item_type', inject_item_type_field, __('Enable user history for items', 'assetuserhistory'), {
        full_width: true
    }) }}
{% endblock %}
